# InstashPro - Production Environment (Docker)
# Usage: docker compose --env-file .env.prod up -d
# Copy this file to .env.prod and fill in your API keys

# App Configuration
APP_NAME=InstashPro
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://instash-api.datafynow.ai

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database (Docker MySQL container)
DB_ROOT_PASSWORD=
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=instashpro
DB_USERNAME=instashpro
DB_PASSWORD=

# Set to true on first run to seed database, then set to false
SEED_DATABASE=false

# Cache & Queue (using database, no Redis)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Frontend URLs (for CORS)
FRONTEND_URL=https://instash.datafynow.ai
ADMIN_URL=https://instash-admin.datafynow.ai

# Next.js Frontend Build
NEXT_PUBLIC_API_URL=https://instash-api.datafynow.ai/api/v1

# Vite Admin Build
VITE_API_URL=https://instash-api.datafynow.ai/api

# Instagram Scraper API (RapidAPI)
INSTAGRAM_SCRAPER_API_KEY=
INSTAGRAM_SCRAPER_API_HOST=instagram-scraper-api2.p.rapidapi.com
INSTAGRAM_SCRAPER_BASE_URL=https://instagram-scraper-api2.p.rapidapi.com/v1/

# OpenRouter API (LLM for product extraction)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_DEFAULT_MODEL=google/gemini-2.5-flash-preview-09-2025

# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# Google
GOOGLE_API_KEY=

# LiteLLM Embedding Service
EMBEDDING_ENABLED=false
LLM_PROVIDER=litellm
LITELLM_EMBEDDING_URL=
LITELLM_API_KEY=
LITELLM_TEXT_MODEL=ollama/qwen3-embedding:8b
LITELLM_IMAGE_MODEL=openai/siglip2-embedding
LITELLM_DEFAULT_MODEL=ollama/qwen3-vl:235b
USE_LITELLM_EMBEDDING=false
EMBEDDING_URL=
EMBEDDING_API_KEY=
EMBEDDING_TEXT_MODEL=qwen3-embedding
EMBEDDING_IMAGE_MODEL=siglip2-embedding
